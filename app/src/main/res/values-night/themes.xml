<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Streaky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="whiteEdittext" parent="android:Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/neue_machina_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white_opacity_60</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="authButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/le_murmure_regular</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">36sp</item>
        <item name="android:background">@drawable/bg_button_auth</item>
    </style>
</resources>