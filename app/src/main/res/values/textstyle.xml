<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="fontFamily">@font/le_murmure_regular</item>
    </style>

    <style name="Text">
        <item name="fontFamily">@font/neue_machina_regular</item>
    </style>

    <style name="AccentTitle" parent="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="SecondaryTitle" parent="Title">
        <item name="android:textColor">@color/white_opacity_60</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextButton" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccentTitleLow" parent="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="AccentTitleLowBlack" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="CreationTitles">
        <item name="fontFamily">@font/neue_machina_ultrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>


    <style name="ShowTasksTitles">
        <item name="fontFamily">@font/neue_machina_ultrabold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MessageTitles">
        <item name="fontFamily">@font/neue_machina_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CreationSubtitles">
        <item name="fontFamily">@font/neue_machina_ultrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CreationNumber">
        <item name="fontFamily">@font/neue_machina_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ShowTaskNumber">
        <item name="fontFamily">@font/neue_machina_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TaskDay">
        <item name="fontFamily">@font/neue_machina_regular</item>
        <item name="android:textColor">@color/lavender</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>