<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="fontFamily">@font/le_murmure_regular</item>
    </style>

    <style name="Text">
        <item name="fontFamily">@font/neue_machina_regular</item>
    </style>

    <style name="AccentTitle" parent="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="SecondaryTitle" parent="Title">
        <item name="android:textColor">@color/white_opacity_60</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextButton" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>