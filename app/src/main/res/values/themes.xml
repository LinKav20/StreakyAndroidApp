<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Streaky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="whiteEdittext" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/neue_machina_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white_opacity_60</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="creationEdittext" parent="whiteEdittext">
        <item name="android:gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="authButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/le_murmure_regular</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">36sp</item>
        <item name="android:background">@drawable/bg_button_auth</item>
    </style>

    <style name="blurViewBase">
        <item name="blurOverlayColor">@color/colorOverlay</item>
    </style>

    <style name="blueViewRepeatTime" parent="blurViewBase">
        <item name="android:layout_width">@dimen/button_repeat_size</item>
        <item name="android:layout_height">@dimen/button_repeat_size</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="buttonRepeatTime" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/neue_machina_regular</item>
    </style>

</resources>